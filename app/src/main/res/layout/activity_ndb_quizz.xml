<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    tools:context="com.example.kyu.caparuf.VORActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            style="@style/VorCategoryNamesStyle"
            android:text="NDB quiz"
            android:textSize="20sp" />

        <TextView
            style="@style/VorCategoryTextStyle"
            android:text="Razem możesz zdobyć 16 punktów. Powodzenia! \n " />

        <TextView
            style="@style/VorCategoryNamesStyle"
            android:text="Rozwin i dobierz definicje" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/Question11"
                    style="@style/VorCategoryTextStyle"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="KKR" />

                <EditText
                    android:id="@+id/Answer11"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint=" " />
                <Spinner
                    android:id="@+id/def1"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:spinnerMode="dialog"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView6"
                    style="@style/VorCategoryTextStyle"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="ADF" />

                <EditText
                    android:id="@+id/Answer12"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint=" " />

                <Spinner
                    android:id="@+id/def2"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:spinnerMode="dialog" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView7"
                    style="@style/VorCategoryTextStyle"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="NDB" />

                <EditText
                    android:id="@+id/Answer13"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint=" " />

                <Spinner
                    android:id="@+id/def3"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:spinnerMode="dialog"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView8"
                    style="@style/VorCategoryTextStyle"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="IFR" />

                <EditText
                    android:id="@+id/Answer14"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint=" " />

                <Spinner
                    android:id="@+id/def4"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:spinnerMode="dialog"/>
            </LinearLayout>


        </LinearLayout>
        <TextView
            style="@style/VorCategoryNamesStyle"
            android:text="Co wyparło System NDB?"
            android:textSize="18sp" />
<RadioGroup
    android:id="@+id/radio"
  style="@style/VorCategoryTextStyle">
        <RadioButton

            style="@style/VorCategoryTextStyle"
            android:id="@+id/Answerr23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="VOR/DME"/>

        <RadioButton

            style="@style/VorCategoryTextStyle"
            android:id="@+id/Answerr22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="VLS"/>

        <RadioButton

            style="@style/VorCategoryTextStyle"
            android:id="@+id/Answerr21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="GPS"/>
</RadioGroup>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView17"
                style="@style/VorCategoryNamesStyle"
                android:layout_width="match_parent"
                android:text="Czego wymagał od pilota ten system" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/VorCategoryTextStyle"
                    android:id="@+id/Text31"
                    android:layout_width="0dp"
                    android:text="Dużej precyzji pilotowania"
                    android:layout_weight="4"/>

                <CheckBox
                    android:id="@+id/Answer31"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/VorCategoryTextStyle"
                    android:layout_weight="4"
                    android:id="@+id/Text34"
                    android:layout_width="0dp"
                    android:text="utrzymywania wzroku na otaczających go radiolatarniach" />

                <CheckBox
                    android:id="@+id/Answer34"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/VorCategoryTextStyle"
                    android:layout_weight="4"
                    android:id="@+id/Text32"
                    android:layout_width="0dp"
                    android:text="wyrobienia u pilotów orientacji przestrzennej położenia samolotu na podstawie różnic wskazań radiokompasów" />

                <CheckBox
                    android:id="@+id/Answer32"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/VorCategoryTextStyle"
                    android:id="@+id/Text33"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:text="wytrzymywania dużych obciążeń podczas lądowania" />

                <CheckBox
                    android:id="@+id/Answer33"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/VorCategoryTextStyle"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:id="@+id/Text35"
                    android:text="Odczytywania z urządzeń pokładowych kierunku samolotu pod kątem KKR względem radiolatarni" />

                <CheckBox
                    android:id="@+id/Answer35"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            style="@style/VorCategoryNamesStyle"
            android:text="Ile radiolatarn potrzeba, zeby wyladowac?"
            android:textSize="18sp" />
        <RadioGroup
            android:id="@+id/radio2"
            style="@style/VorCategoryTextStyle">
        <RadioButton

            android:id="@+id/Answer41"
            style="@style/VorCategoryTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="69" />


        <RadioButton
            style="@style/VorCategoryTextStyle"
            android:id="@+id/Answer42"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="96" />

        <RadioButton

            style="@style/VorCategoryTextStyle"
            android:id="@+id/Answer43"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2"/>
        <RadioButton

            style="@style/VorCategoryTextStyle"
            android:id="@+id/Answer44"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Im więcej, tym lepiej"  />
        </RadioGroup>
        <Button
            android:id="@+id/result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="sprawdz"/>
        <TextView
            android:id="@+id/EndStatement"
            style="@style/VorCategoryTextStyle"
            />

    </LinearLayout>
</ScrollView>